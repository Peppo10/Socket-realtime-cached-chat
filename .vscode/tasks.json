{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build active file WIN",
			"type": "cppbuild",
			"command": "C:/mingw64/bin/g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g3",
				"-Wall",
				"${file}",
				"${fileDirname}\\service\\service.cpp",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
				"-static",
				"-lws2_32",
				"-lpthread",
				"-luuid"
			],
			"options": {
				"cwd": "C:/mingw64/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: C:/mingw64/bin/g++.exe"
		},
		{
            "label": "build active file UNIX",
            "type": "cppbuild",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g3",
                "-Wall",
                "${file}",
                "${fileDirname}/service/service.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lpthread"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: /usr/bin/g++"
        },
		{
            "label": "Compile and Run",
            "type": "shell",
            "command": "",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": [
                "build active file",
                "Run Compiled file"
            ]
        },
		{
			"label": "Run Compiled file",
			"type": "shell",
			"group": {
                "kind": "none",
                "isDefault": true
            },
			"command": "${fileDirname}\\${fileBasenameNoExtension}.exe"
		}
	]
}