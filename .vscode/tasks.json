{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build active file WIN",
			"type": "shell",
			"command": "C:/mingw64/bin/g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g3",
				"-Wall",
				"${file}",
				"${fileDirname}\\service.cpp",
				"${fileDirname}\\caching.cpp",
				"${fileDirname}\\connection.cpp",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
				"-static",
				"-lws2_32",
				"-lpthread",
				"-luuid"
			],
			"options": {
				"cwd": "C:/mingw64/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: C:/mingw64/bin/g++.exe"
		},
		{
			"label": "build active file LINUX",
			"type": "shell",
			"command": "/usr/bin/g++",
			"args": [
				"-std=c++17",
				"-fdiagnostics-color=always",
				"-g3",
				"-Wall",
				"${file}",
				"${fileDirname}/service.cpp",
				"${fileDirname}/caching.cpp",
				"${fileDirname}/connection.cpp",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"-lpthread"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/g++"
		},
		{
			"label": "Compile and Run WIN",
			"type": "shell",
			"command": "",
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"dependsOn": [
				"build active file WIN",
				"Run Compiled file WIN"
			]
		},
		{
			"label": "Run Compiled file WIN",
			"type": "shell",
			"group": {
				"kind": "none",
				"isDefault": true
			},
			"command": "${fileDirname}\\${fileBasenameNoExtension}.exe"
		},
		{
			"label": "Compile and Run LINUX",
			"type": "shell",
			"command": "",
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"dependsOn": [
				"build active file LINUX",
				"Run Compiled file LINUX"
			]
		},
		{
			"label": "Run Compiled file LINUX",
			"type": "shell",
			"group": {
				"kind": "none",
				"isDefault": true
			},
			"command": "./${fileDirname}/${fileBasenameNoExtension}"
		}
	]
}